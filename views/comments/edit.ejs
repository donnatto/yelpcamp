<% include ../partials/header %>

<div class="container">
  <h1 class="text-center mb-3">Edit Comment</h1>
  <div class="row justify-content-center mb-3">
    <div class="col-md-8 col-lg-5">
      <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="comment[text]" class="col-form-label">Comment</label>
          <textarea
            class="form-control"
            name="comment[text]"
          ><%= comment.text %></textarea>
        </div>
        <div class="form-group">
          <input type="submit" class="btn btn-block btn-success" value="Edit"/>
        </div>
      </form>
      <a href="/campgrounds/<%= campground_id %>" class="text-danger">Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
