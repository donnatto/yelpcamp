<% include ../partials/header %>

<div class="container">
    <h1 class="text-center mb-4">Add New Comment to: <%= campground.name %></h1>
    <div style="width: 30%; margin: 50px auto;">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <label for="comment[text]" class="col-form-label">Comment</label>
                <input type="text" class="form-control" name="comment[text]" placeholder="Text">
            </div>
            <div class="form-group">
                <label for="comment[author]" class="col-form-label">Author</label>
                <input type="text" class="form-control" name="comment[author]" placeholder="Author">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-block btn-primary"/>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>