<% include ../partials/header %>

<div class="container">
    <h1 class="text-center mb-4">Create a New Campground</h1>
    <div style="width: 30%; margin: 50px auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="name" class="col-form-label">Name</label>
                <input type="text" class="form-control" name="name" id="name" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="price" class="col-form-label">Price</label>
                <input type="number" class="form-control" name="price" id="price" placeholder="$$" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <label for="image" class="col-form-label">Image</label>
                <input type="text" class="form-control" name="image" id="image" placeholder="Image URL">
            </div>
            <div class="form-group">
                <label for="description" class="col-form-label">Description</label>
                <textarea class="form-control" name="description" id="description" placeholder="Description"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-block btn-primary"/>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>