<% include ../partials/header %>

<div class="container">
    <h1 class="text-center mb-3">Edit <%= campground.name %></h1>
    <div class="row justify-content-center mb-3">
        <div class="col-lg-6">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name" class="col-form-label">Name</label>
                    <input type="text" class="form-control" name="campground[name]" id="name" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <label for="price" class="col-form-label">Price</label>
                    <input type="number" class="form-control" name="campground[price]" id="price" value="<%= campground.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label for="image" class="col-form-label">Image</label>
                    <input type="text" class="form-control" name="campground[image]" id="image" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <label for="description" class="col-form-label">Description</label>
                    <textarea class="form-control" name="campground[description]" id="description"><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-block btn-success" value="Edit"/>
                </div>
            </form>
            <a class="text-success" href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>