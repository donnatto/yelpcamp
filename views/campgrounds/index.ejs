<% include ../partials/header %>

<div class="container">

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked camps from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground!</a>
            </p>
        </div>
    </header>
    <div class="row d-flex flex-wrap">
        <div class="col-lg-12 mb-3">
            <h3>Our most popular Campgrounds</h3>
        </div>
        <div class="card-columns">
            <% campgrounds.forEach(function(campground){ %>
                <div class="card mb-3">
                    <img class="card-img-top" src="<%= campground.image %>" alt="">
                    <div class="card-body text-center">
                        <p class="card-title"><strong><%= campground.name %></strong></p>
                        <p class="card-text">
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary btn-sm">More Info</a>
                        </p>
                    </div>
                </div>
            <% }) %>
        </div>

    </div>

</div>

<% include ../partials/footer %>