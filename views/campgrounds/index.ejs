<% include ../partials/header %>

<div class="container">

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked camps from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground!</a>
            </p>
        </div>
    </header>
    <div class="row d-flex flex-wrap">
        <div class="col-lg-12 mb-3">
            <h3>Our most popular Campgrounds</h3>
        </div>
        <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
            <figure class="figure">
                <img class="figure-img img-fluid rounded" src="<%= campground.image %>">
                <figcaption class="figure-caption text-center"><%= campground.name %></figcaption>
            </figure>
            <p class="text-center">
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
            </p>
        </div>
        <% }) %>

    </div>

</div>

<% include ../partials/footer %>